<h1>My Profile</h1>
<div class="profile-box">
  <img src="{{{profilePicture}}}">

  <div class="profile">
    <div class="info">
      <h3>My Teams</h3>
        {{#if teams}}
          {{#each teams}}
            <form action="/teams/leave-team/{{{_id}}}" method="GET">
              <p>{{name}}</p>
              <input type="submit" value="Leave Team">
            </form>
          {{/each}}
        {{else}}
          <p>You have no teams</p>
        {{/if}}
    </div>

    <div class="more-info">
      <h3>My Projects</h3>
      {{#if teams}}
        {{#each teams}}
          {{#if projects}}
            {{#each projects}}
              <p>{{name}}</p>
            {{/each}}
          {{else}}
            <p>You have no projects about {{name}}</p>        
          {{/if}}
        {{/each}}
      {{else}}
          <p>You have no projects</p>        
      {{/if}}
    </div>
  </div>
</div>