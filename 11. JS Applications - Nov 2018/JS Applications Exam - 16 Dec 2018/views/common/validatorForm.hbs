<script type="text/javascript">
  (function () {
    let form = document.getElementsByClassName('needs-validation')[0];
    form.addEventListener('submit', function (event) {
      if (form.checkValidity() === false) {

        event.preventDefault();
        event.stopPropagation();

        let userName = $('#username');
        let userPass = $('#password');

        if (userName.val() === '' || userName.val().length < 3) {
          userName.next().append('<div class="text-danger">Username must be at least 3 symbols!<div>');
        }

        if (userPass.val() === '' || userPass.val().length < 6) {
          userPass.next().append('<div class="text-danger">Password must be at least 6 symbols!<div>');
        }
      }
      
      form.classList.add('was-validated');
    }
    , false);

    $('#username').on('keyup', () => {
      $('#username').next().empty();
    });

    $('#password').on('keyup', () => {
      $('#password').next().empty();
    });

  })();  
</script>