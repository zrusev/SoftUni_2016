<section class="myPet">
  <h3>Name: {{ name }}</h3>
  <p>Category: {{ category }}</p>
  <p class="img"><img src="{{{ imageURL }}}"></p>
  <p class="description">{{ description }}</p>
  <div class="pet-info">
    <a href="#/delete:{{{ _id }}}"><button class="button">Delete</button></a>
    <a href="#/edit:{{{ _id }}}"><button class="button">Edit</button></a>
    <i class="fas fa-heart"></i> <span>{{ likes }}</span>
  </div>
</section>